
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the requesting user is the owner of the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Rules for the 'users' collection (PRIVATE user data)
    match /users/{userId} {
      // Any authenticated user can create their own profile
      allow create: if isSignedIn() && isOwner(userId);
      
      // Only the owner can read or update their own private profile
      allow read, update: if isSignedIn() && isOwner(userId);
      
      // Only the owner can delete their own profile
      allow delete: if isSignedIn() && isOwner(userId);

      // Subcollections remain private to the user
      match /transactions/{transactionId} {
        allow read, write, delete: if isSignedIn() && isOwner(userId);
      }
      
      match /budgets/{budgetId} {
        allow read, write, delete: if isSignedIn() && isOwner(userId);
      }

      match /savedIdeas/{ideaId} {
        allow read, write, delete: if isSignedIn() && isOwner(userId);
      }

      match /savingsGoals/{goalId} {
        allow read, write, delete: if isSignedIn() && isOwner(userId);
      }
    }
    
    // Rules for the 'msme-profiles' collection (PUBLIC marketplace data)
    match /msme-profiles/{userId} {
        // Any authenticated user can read the public profiles for the marketplace
        allow read: if isSignedIn();
        
        // A user can only create a public profile for themselves
        allow create: if isSignedIn() && isOwner(userId) && request.resource.data.uid == userId;
        
        // Only the owner of the profile can update or delete it
        allow update, delete: if isSignedIn() && isOwner(userId);
    }

    // Community Ideas: Any authenticated user can read. Only the original contributor can create or delete.
    match /communityIdeas/{ideaId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn() && isOwner(request.resource.data.userId);
        // Ensure only the user who created the idea can delete it
        allow delete: if isSignedIn() && isOwner(resource.data.userId);
        allow update: if false; // Disallow updates to maintain integrity
    }

    // DPR Feedback: Allow any authenticated user to create feedback.
    match /dpr-feedback/{feedbackId} {
      allow create: if isSignedIn();
      allow read, update, delete: if false; // Only allow creation
    }
  }
}

    