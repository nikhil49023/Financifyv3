
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the requesting user is the owner of the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Any authenticated user can create their own profile
      allow create: if isSignedIn() && request.resource.id == request.auth.uid;
      
      // Only the owner can read or update their own profile
      allow read, update: if isSignedIn() && isOwner(userId);
      
      // Deletion of user profiles is disallowed for safety
      allow delete: if false;

      // Rules for subcollections under a user document
      
      // Transactions: Only the owner can manage their transactions
      match /transactions/{transactionId} {
        allow read, write, delete: if isSignedIn() && isOwner(userId);
      }
      
      // Budgets: Only the owner can manage their budgets
      match /budgets/{budgetId} {
        allow read, write, delete: if isSignedIn() && isOwner(userId);
      }

      // Saved Ideas: Only the owner can manage their saved ideas
      match /savedIdeas/{ideaId} {
        allow read, write, delete: if isSignedIn() && isOwner(userId);
      }

       // Savings Goals: Only the owner can manage their goals
      match /savingsGoals/{goalId} {
        allow read, write, delete: if isSignedIn() && isOwner(userId);
      }
    }
    
    // Community Ideas: Any authenticated user can read. Only the original contributor can create or delete.
    match /communityIdeas/{ideaId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn() && isOwner(request.resource.data.userId);
        // Ensure only the user who created the idea can delete it
        allow delete: if isSignedIn() && isOwner(resource.data.userId);
        allow update: if false; // Disallow updates to maintain integrity
    }

    // DPR Feedback: Allow any authenticated user to create feedback.
    match /dpr-feedback/{feedbackId} {
      allow create: if isSignedIn();
      allow read, update, delete: if false; // Only allow creation
    }
  }
}
